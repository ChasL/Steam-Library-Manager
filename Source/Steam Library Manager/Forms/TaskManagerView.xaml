<UserControl x:Class="Steam_Library_Manager.Forms.TaskManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:l="clr-namespace:Gu.Wpf.Localization;assembly=Gu.Wpf.Localization"
             xmlns:SLM="clr-namespace:Steam_Library_Manager"
             xmlns:Enums="clr-namespace:Steam_Library_Manager.Definitions.Enums"
             xmlns:cachedImage="clr-namespace:Steam_Library_Manager.Framework.CachedImage"
             xmlns:p="clr-namespace:Steam_Library_Manager.Properties"
             mc:Ignorable="d">
    <UserControl.Resources>
        <!-- Task Manager: GridView -->
        <DataTemplate x:Key="GridView">
            <Grid ScrollViewer.VerticalScrollBarVisibility="Auto" MouseDown="Grid_MouseDown">
                <Grid.ContextMenu>
                    <ContextMenu BorderThickness="0">
                        <MenuItem Header="{l:Static p:Resources.Compress}" Tag="ToggleCompress" Click="TaskManager_ContextMenu_Click" />
                        <MenuItem Header="{l:Static p:Resources.RemoveOriginalFiles}" Tag="ToggleRemoveFiles" Click="TaskManager_ContextMenu_Click" />
                        <Separator />
                        <MenuItem Header="{l:Static p:Resources.TaskManagerRemoveFromQueue}" Tag="Remove" Click="TaskManager_ContextMenu_Click" />
                    </ContextMenu>
                </Grid.ContextMenu>

                <controls:MetroProgressBar Maximum="100" Value="{Binding ProgressBarPerc, Mode=OneWay}" VerticalAlignment="Stretch" Margin="-4, 0">
                    <controls:MetroProgressBar.Style>
                        <Style TargetType="{x:Type ProgressBar}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Completed}" Value="false">
                                    <Setter Property="Opacity" Value="0.20" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Completed}" Value="true">
                                    <Setter Property="Opacity" Value="0.70" />
                                    <Setter Property="Foreground" Value="LightBlue" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </controls:MetroProgressBar.Style>
                </controls:MetroProgressBar>

                <Grid Margin="2" HorizontalAlignment="Left">
                    <Border BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness=".7" CornerRadius="2">
                        <cachedImage:Image Stretch="Fill" ImageUrl="{Binding App.GameHeaderImage}">
                            <cachedImage:Image.Effect>
                                <DropShadowEffect Direction="130" ShadowDepth="1" BlurRadius="3" />
                            </cachedImage:Image.Effect>
                            <cachedImage:Image.Style>
                                <Style TargetType="cachedImage:Image">
                                    <Setter Property="Width" Value="230px" />
                                    <Setter Property="Height" Value="107px" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding App.Library.Type}" Value="Origin">
                                            <Setter Property="Tag" Value="origin" />
                                            <Setter Property="Width" Value="116px" />
                                            <Setter Property="Height" Value="163px" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding App.Library.Type}" Value="Uplay">
                                            <Setter Property="Tag" Value="uplay" />
                                            <Setter Property="Width" Value="140px" />
                                            <Setter Property="Height" Value="163px" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Completed}" Value="true">
                                            <Setter Property="Opacity" Value="0.4" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </cachedImage:Image.Style>
                        </cachedImage:Image>
                    </Border>
                    <TextBlock FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Completed}" Value="true">
                                        <Setter Property="Text" Value="{l:Static p:Resources.TaskManagerCompleted}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
                <Grid>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Margin" Value="240, 0, 0, 0" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding App.Library.Type}" Value="Origin">
                                    <Setter Property="Margin" Value="125, 0, 0, 0" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding App.Library.Type}" Value="Uplay">
                                    <Setter Property="Margin" Value="149, 0, 0, 0" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <WrapPanel>
                        <iconPacks:PackIconFontAwesome Kind="SpinnerSolid" Spin="True" Margin="0, 5, 10, 0" Height="16" Width="16" Foreground="{DynamicResource HighlightBrush}">
                            <iconPacks:PackIconFontAwesome.Style>
                                <Style TargetType="iconPacks:PackIconFontAwesome">
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Active}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible" />
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Completed}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Active}" Value="False" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ErrorHappened}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </iconPacks:PackIconFontAwesome.Style>
                        </iconPacks:PackIconFontAwesome>
                        <iconPacks:PackIconModern Kind="ControlPause" Margin="0, 5, 10, 0" Height="16" Width="16" Foreground="{DynamicResource HighlightBrush}">
                            <iconPacks:PackIconModern.Style>
                                <Style TargetType="iconPacks:PackIconModern">
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Active}" Value="False" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible" />
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Completed}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Active}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ErrorHappened}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </iconPacks:PackIconModern.Style>
                        </iconPacks:PackIconModern>
                        <iconPacks:PackIconMaterial Kind="CheckCircle" Margin="0, 5, 10, 0" Height="16" Width="16" Foreground="{DynamicResource HighlightBrush}">
                            <iconPacks:PackIconMaterial.Style>
                                <Style TargetType="iconPacks:PackIconMaterial">
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Completed}" Value="False" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Completed}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible" />
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ErrorHappened}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </iconPacks:PackIconMaterial.Style>
                        </iconPacks:PackIconMaterial>
                        <iconPacks:PackIconFontAwesome Kind="ExclamationCircleSolid" Margin="0, 5, 10, 0" Height="16" Width="16" Foreground="{DynamicResource ValidationBrush5}">
                            <iconPacks:PackIconFontAwesome.Style>
                                <Style TargetType="iconPacks:PackIconFontAwesome">
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ErrorHappened}" Value="False" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ErrorHappened}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </iconPacks:PackIconFontAwesome.Style>
                        </iconPacks:PackIconFontAwesome>
                        <TextBlock Text="{Binding App.AppName}" TextWrapping="Wrap" FontSize="14" />
                    </WrapPanel>
                    <TextBlock Text="{Binding TaskStatusInfo}" VerticalAlignment="Top" HorizontalAlignment="Right" TextWrapping="Wrap" />
                    <WrapPanel Margin="0,35,0,0" HorizontalAlignment="Right">
                        <TextBlock Text="{Binding App.Library.DirectoryInfo.FullName, StringFormat=Source: \{0\}}" TextWrapping="Wrap" />
                        <TextBlock Text="  |  " />
                        <TextBlock Text="{Binding TargetLibrary.DirectoryInfo.FullName, StringFormat=Target: \{0\}}" TextWrapping="Wrap" />
                        <TextBlock Text="  |  " />
                        <TextBlock Text="{Binding App.PrettyGameSize}" />
                    </WrapPanel>

                    <Grid VerticalAlignment="Bottom" Margin="0,0,0,5">
                        <TextBlock Text="{Binding App.AppId}" HorizontalAlignment="Left" Height="20" />

                        <TextBlock Margin="0,-20,0,0"> <!-- Task type, Deletion / Compact -->
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TaskType}" Value="Copy">
                                            <Setter Property="Text" Value="{l:Static p:Resources.Copy}" />
                                            <Setter Property="FontWeight" Value="SemiBold" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding TaskType}" Value="Delete">
                                            <Setter Property="Text" Value="{l:Static p:Resources.Delete}" />
                                            <Setter Property="FontWeight" Value="SemiBold" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding TaskType}" Value="Compact">
                                            <Setter Property="Text" Value="{l:Static p:Resources.Compact}" />
                                            <Setter Property="FontWeight" Value="SemiBold" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Checkboxes -->
                        <WrapPanel Margin="55,0,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <CheckBox BorderBrush="{DynamicResource AccentColorBrush}" Content="{l:Static p:Resources.ReportFileMovement}" IsChecked="{Binding ReportFileMovement}" />
                            <WrapPanel>
                                <WrapPanel.Style>
                                    <Style TargetType="{x:Type WrapPanel}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TaskType}" Value="Delete">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding TaskType}" Value="Compact">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </WrapPanel.Style>

                                <CheckBox BorderBrush="{DynamicResource AccentColorBrush}" Margin="5,0,0,0" Content="{l:Static p:Resources.RemoveOriginalFiles}" IsChecked="{Binding RemoveOldFiles}" />
                                <CheckBox BorderBrush="{DynamicResource AccentColorBrush}" Margin="5,0,0,0" Content="{l:Static p:Resources.Compress}" IsChecked="{Binding Compress}" />
                                <CheckBox BorderBrush="{DynamicResource AccentColorBrush}" Margin="5,0,0,0" Content="{l:Static p:Resources.AutoInstall}" IsChecked="{Binding AutoInstall}">
                                    <CheckBox.Style>
                                        <Style TargetType="CheckBox" BasedOn="{StaticResource MetroCheckBox}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding App.Library.Type}" Value="Origin" />
                                                        <Condition Binding="{Binding TaskType}" Value="Copy" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding App.Library.Type}" Value="Uplay" />
                                                        <Condition Binding="{Binding TaskType}" Value="Copy" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>
                                <ComboBox BorderBrush="{DynamicResource AccentColorBrush}" Margin="5,0,0,0" Width="80">
                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox" BasedOn="{StaticResource MetroComboBox}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding App.Library.Type}" Value="Origin" />
                                                        <Condition Binding="{Binding TaskType}" Value="Copy" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible" />
                                                    <Setter Property="ItemsSource" Value="{Binding App.Locales}" />
                                                    <Setter Property="SelectedItem" Value="{Binding App.InstalledLocale}" />
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ComboBox.Style>
                                </ComboBox>
                            </WrapPanel>
                            <WrapPanel>
                                <WrapPanel.Style>
                                    <Style TargetType="{x:Type WrapPanel}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TaskType}" Value="Compact">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </WrapPanel.Style>
                                <CheckBox BorderBrush="{DynamicResource AccentColorBrush}" Margin="5,0,0,0" HorizontalAlignment="Left" Content="{l:Static p:Resources.Compact}" IsChecked="{Binding Compact}" />
                                <CheckBox BorderBrush="{DynamicResource AccentColorBrush}" Margin="5,0,0,0" HorizontalAlignment="Left" Content="{l:Static p:Resources.CompactForceCompress}" IsChecked="{Binding ForceCompact}" />
                                <ComboBox BorderBrush="{DynamicResource AccentColorBrush}" Margin="5,0,0,0" HorizontalAlignment="Left" Width="100" SelectedItem="{Binding CompactLevel}"
                                          ItemsSource="{Binding Source={SLM:EnumBindingSource EnumType={x:Type Enums:CompactLevel}}}" />
                            </WrapPanel>
                        </WrapPanel>

                        <WrapPanel HorizontalAlignment="Right">
                            <TextBlock Text="{Binding TaskProgressInfo}" />
                            <TextBlock Margin="10,0,0,0" Text="{Binding ProgressBarPerc, Mode=OneWay, StringFormat=\{0\}%}" />
                        </WrapPanel>
                    </Grid>
                </Grid>
            </Grid>
        </DataTemplate>

        <!-- Task Manager: ListView -->
        <DataTemplate x:Key="ListView">
            <Grid ScrollViewer.VerticalScrollBarVisibility="Auto" MouseDown="Grid_MouseDown" Height="50">
                <Grid.ContextMenu>
                    <ContextMenu BorderThickness="0">
                        <MenuItem Header="{l:Static p:Resources.Compress}" Tag="ToggleCompress" Click="TaskManager_ContextMenu_Click" />
                        <MenuItem Header="{l:Static p:Resources.RemoveOriginalFiles}" Tag="ToggleRemoveFiles" Click="TaskManager_ContextMenu_Click" />
                        <Separator />
                        <MenuItem Header="{l:Static p:Resources.TaskManagerRemoveFromQueue}" Tag="Remove" Click="TaskManager_ContextMenu_Click" />
                    </ContextMenu>
                </Grid.ContextMenu>
                <controls:MetroProgressBar Maximum="100" Value="{Binding ProgressBarPerc, Mode=OneWay}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="-4, 0">
                    <controls:MetroProgressBar.Style>
                        <Style TargetType="{x:Type controls:MetroProgressBar}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Completed}" Value="false">
                                    <Setter Property="Opacity" Value="0.25" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Completed}" Value="true">
                                    <Setter Property="Opacity" Value="0.75" />
                                    <Setter Property="Foreground" Value="LightBlue" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </controls:MetroProgressBar.Style>
                </controls:MetroProgressBar>

                <Grid Width="64px" Height="32px" Margin="5" HorizontalAlignment="Left">
                    <cachedImage:Image Stretch="Fill" ImageUrl="{Binding App.GameHeaderImage}">
                        <cachedImage:Image.Style>
                            <Style TargetType="cachedImage:Image">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Completed}" Value="true">
                                        <Setter Property="Opacity" Value="0.4" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding App.Library.Type}" Value="Origin">
                                        <Setter Property="Tag" Value="origin" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </cachedImage:Image.Style>
                    </cachedImage:Image>

                    <TextBlock FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="11">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Completed}" Value="true">
                                        <Setter Property="Text" Value="{l:Static p:Resources.TaskManagerCompleted}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <Grid>
                    <!-- icons! -->
                    <WrapPanel Orientation="Horizontal" Margin="75,0,0,0">
                        <iconPacks:PackIconFontAwesome Kind="SpinnerSolid" Spin="True" Margin="0, 5, 5, 0" Height="16" Width="16" Foreground="{DynamicResource HighlightBrush}">
                            <iconPacks:PackIconFontAwesome.Style>
                                <Style TargetType="iconPacks:PackIconFontAwesome">
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Active}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible" />
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Completed}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Active}" Value="False" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ErrorHappened}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </iconPacks:PackIconFontAwesome.Style>
                        </iconPacks:PackIconFontAwesome>
                        <iconPacks:PackIconModern Kind="ControlPause" Margin="3, 5, 8, 0" Height="16" Width="16" Foreground="{DynamicResource HighlightBrush}">
                            <iconPacks:PackIconModern.Style>
                                <Style TargetType="iconPacks:PackIconModern">
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Active}" Value="False" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible" />
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Completed}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Active}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ErrorHappened}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </iconPacks:PackIconModern.Style>
                        </iconPacks:PackIconModern>
                        <iconPacks:PackIconMaterial Kind="CheckCircle" Margin="0, 5, 5, 0" Height="16" Width="16" Foreground="{DynamicResource HighlightBrush}">
                            <iconPacks:PackIconMaterial.Style>
                                <Style TargetType="iconPacks:PackIconMaterial">
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Completed}" Value="False" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Completed}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible" />
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ErrorHappened}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </iconPacks:PackIconMaterial.Style>
                        </iconPacks:PackIconMaterial>
                        <iconPacks:PackIconFontAwesome Kind="ExclamationCircleSolid" Margin="0, 5, 5, 0" Height="16" Width="16" Foreground="{DynamicResource ValidationBrush5}">
                            <iconPacks:PackIconFontAwesome.Style>
                                <Style TargetType="iconPacks:PackIconFontAwesome">
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ErrorHappened}" Value="False" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ErrorHappened}" Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </iconPacks:PackIconFontAwesome.Style>
                        </iconPacks:PackIconFontAwesome>
                        <TextBlock Text="{Binding App.AppName}" TextWrapping="Wrap" FontSize="13" />
                    </WrapPanel>

                    <WrapPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <TextBlock Text="{Binding App.Library.DirectoryInfo.FullName, StringFormat=Source: \{0\}}" TextWrapping="Wrap" />
                        <TextBlock Text="  |  " />
                        <TextBlock Text="{Binding TargetLibrary.DirectoryInfo.FullName, StringFormat=Target: \{0\}}" TextWrapping="Wrap" />
                    </WrapPanel>

                    <Grid VerticalAlignment="Bottom" Margin="75,0,0,0">
                        <TextBlock Text="{Binding App.AppId}" HorizontalAlignment="Left" VerticalAlignment="Bottom" />

                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <TextBlock Text="{Binding TaskStatusInfo}" />
                            <TextBlock Margin="5,0,0,0" Text="{Binding ProgressBarPerc, Mode=OneWay, StringFormat=\{0\}%}" HorizontalAlignment="Right" TextWrapping="Wrap" />
                            <TextBlock Margin="5,0,0,0" Text="{Binding App.PrettyGameSize}" HorizontalAlignment="Right" />
                        </WrapPanel>

                        <WrapPanel Margin="50,0,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                            <!-- task type text -->
                            <TextBlock Margin="0,0,10,0" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TaskType}" Value="Copy">
                                                <Setter Property="Text" Value="{l:Static p:Resources.Copy}" />
                                                <Setter Property="FontWeight" Value="SemiBold" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding TaskType}" Value="Delete">
                                                <Setter Property="Text" Value="{l:Static p:Resources.Delete}" />
                                                <Setter Property="FontWeight" Value="SemiBold" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding TaskType}" Value="Compact">
                                                <Setter Property="Text" Value="{l:Static p:Resources.Compact}" />
                                                <Setter Property="FontWeight" Value="SemiBold" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <CheckBox BorderBrush="{DynamicResource AccentColorBrush}" Content="{l:Static p:Resources.Forms_TaskManager_ReportFileMovement}" IsChecked="{Binding ReportFileMovement}" />
                            <WrapPanel Orientation="Horizontal">
                                <WrapPanel.Style>
                                    <Style TargetType="{x:Type WrapPanel}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TaskType}" Value="Delete">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding TaskType}" Value="Compact">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </WrapPanel.Style>

                                <CheckBox BorderBrush="{DynamicResource AccentColorBrush}" Margin="5,0,0,0" Content="{l:Static p:Resources.RemoveOriginalFiles}" IsChecked="{Binding RemoveOldFiles}" />
                                <CheckBox BorderBrush="{DynamicResource AccentColorBrush}" Content="{l:Static p:Resources.Compress}" IsChecked="{Binding Compress}" Margin="5,0,0,0" />
                                <CheckBox BorderBrush="{DynamicResource AccentColorBrush}" Margin="5,0,0,0" Content="{l:Static p:Resources.AutoInstall}" IsChecked="{Binding AutoInstall}">
                                    <CheckBox.Style>
                                        <Style TargetType="CheckBox" BasedOn="{StaticResource MetroCheckBox}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding App.Library.Type}" Value="Origin" />
                                                        <Condition Binding="{Binding TaskType}" Value="Copy" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding App.Library.Type}" Value="Uplay" />
                                                        <Condition Binding="{Binding TaskType}" Value="Copy" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>
                                <ComboBox BorderBrush="{DynamicResource AccentColorBrush}" Margin="5,0,0,0" Width="80">
                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox" BasedOn="{StaticResource MetroComboBox}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding App.Library.Type}" Value="Origin" />
                                                        <Condition Binding="{Binding TaskType}" Value="Copy" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible" />
                                                    <Setter Property="ItemsSource" Value="{Binding App.Locales}" />
                                                    <Setter Property="SelectedItem" Value="{Binding App.InstalledLocale}" />
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ComboBox.Style>
                                </ComboBox>
                            </WrapPanel>
                            <WrapPanel>
                                <WrapPanel.Style>
                                    <Style TargetType="{x:Type WrapPanel}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TaskType}" Value="Compact">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </WrapPanel.Style>
                                <CheckBox BorderBrush="{DynamicResource AccentColorBrush}" Margin="5,0,0,0" HorizontalAlignment="Left" Content="{l:Static p:Resources.Compact}" IsChecked="{Binding Compact}" />
                                <CheckBox BorderBrush="{DynamicResource AccentColorBrush}" Margin="5,0,0,0" HorizontalAlignment="Left" Content="{l:Static p:Resources.CompactForceCompress}" IsChecked="{Binding ForceCompact}" />
                                <ComboBox BorderBrush="{DynamicResource AccentColorBrush}" Margin="5,0,0,0" HorizontalAlignment="Left" Width="100" SelectedItem="{Binding CompactLevel}"
                                          ItemsSource="{Binding Source={SLM:EnumBindingSource EnumType={x:Type Enums:CompactLevel}}}" />
                            </WrapPanel>
                        </WrapPanel>
                    </Grid>
                </Grid>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <!-- ListView: Task Manager Tasks -->
        <ListView x:Name="TaskPanel" HorizontalContentAlignment="Stretch" BorderThickness=".8" BorderBrush="{DynamicResource AccentColorBrush}" VerticalContentAlignment="Stretch" Margin="0,10,0,315" SelectionMode="Extended" IsTabStop="False" ScrollViewer.HorizontalScrollBarVisibility="Disabled" IsSynchronizedWithCurrentItem="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding}">
                        <ContentControl.Style>
                            <Style TargetType="{x:Type ContentControl}">
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{SLM:SettingBinding LibraryStyle}" Value="Grid" />
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="ContentTemplate" Value="{StaticResource GridView}" />
                                    </MultiDataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{SLM:SettingBinding LibraryStyle}" Value="Listview" />
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="ContentTemplate" Value="{StaticResource ListView}" />
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ToolTip>
                <ToolTip>
                    <StackPanel>
                        <TextBlock Text="{l:Static p:Resources.TaskPanel_Tooltip}" />
                    </StackPanel>
                </ToolTip>
            </ListView.ToolTip>
        </ListView>

        <WrapPanel Margin="0, 0, 0, 265" Orientation="Horizontal" Height="45" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <!-- Button: Start Task Manager -->
            <Button x:Name="Button_StartTaskManager" Style="{StaticResource MahApps.Styles.Button.AccentedSquare}" BorderThickness="0" FontSize="13" Content="{l:Static p:Resources.TaskManagerStart}" Tag="Start" Click="TaskManager_Buttons_Click" Width="140" Height="45">
                <Button.ToolTip>
                    <ToolTip>
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Text="{l:Static p:Resources.StartTaskManager}" />
                            <TextBlock Text="{l:Static p:Resources.StartTaskManager_Tooltip}" />
                        </StackPanel>
                    </ToolTip>
                </Button.ToolTip>
            </Button>

            <Button Margin="5,0,0,0" Style="{StaticResource MahApps.Styles.Button.AccentedSquare}" BorderThickness="0" x:Name="Button_PauseTaskManager" FontSize="13" IsEnabled="False" Content="{l:Static p:Resources.TaskManagerPause}" Tag="Pause" Click="TaskManager_Buttons_Click" Width="140" Height="45">
                <Button.ToolTip>
                    <ToolTip>
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Text="{l:Static p:Resources.PauseTaskManager}" />
                            <TextBlock Text="{l:Static p:Resources.PauseTaskManager_Tooltip}" />
                        </StackPanel>
                    </ToolTip>
                </Button.ToolTip>
            </Button>

            <!-- Button: Stop Task Manager -->
            <Button Margin="5,0,0,0" Style="{StaticResource MahApps.Styles.Button.AccentedSquare}" BorderThickness="0" x:Name="Button_StopTaskManager" FontSize="13" IsEnabled="False" Content="{l:Static p:Resources.TaskManagerStop}" Tag="Stop" Click="TaskManager_Buttons_Click" Width="140" Height="45">
                <Button.ToolTip>
                    <ToolTip>
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Text="{l:Static p:Resources.StopTaskManager}" />
                            <TextBlock Text="{l:Static p:Resources.StopTaskManager_Tooltip}" />
                        </StackPanel>
                    </ToolTip>
                </Button.ToolTip>
            </Button>

            <!-- Button: Clear Completed Tasks -->
            <Button Margin="5,0,0,0" Style="{StaticResource MahApps.Styles.Button.AccentedSquare}" BorderThickness="0" Content="{l:Static p:Resources.ClearCompletedTasks}" FontSize="13" Tag="ClearCompleted" Click="TaskManager_Buttons_Click" Height="45">
                <Button.ToolTip>
                    <ToolTip>
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Text="{l:Static p:Resources.ClearCompletedTasks}" />
                            <TextBlock Text="{l:Static p:Resources.ClearCompletedTasks_Tooltip}" />
                        </StackPanel>
                    </ToolTip>
                </Button.ToolTip>
            </Button>

            <!-- Button: Check for Backup Updates -->
            <Button Margin="5,0,0,0" Style="{StaticResource MahApps.Styles.Button.AccentedSquare}" BorderThickness="0" Content="{l:Static p:Resources.CheckForBackupUpdates}" FontSize="13" Tag="BackupUpdates" Click="TaskManager_Buttons_Click" Height="45">
                <Button.ToolTip>
                    <ToolTip>
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Text="{l:Static p:Resources.CheckForBackupUpdates}" />
                            <TextBlock Text="{l:Static p:Resources.CheckForBackupUpdates_Tooltip}" />
                        </StackPanel>
                    </ToolTip>
                </Button.ToolTip>
            </Button>
        </WrapPanel>
        <WrapPanel Name="TaskManagerInformation" Margin="0, 0, 0, 228" Orientation="Horizontal" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <TextBlock Text="{Binding PendingTasks, Mode=OneWay, StringFormat=Pending: \{0\}}" />
            <TextBlock Text="  |  " />
            <TextBlock Text="{Binding CompletedTasks, Mode=OneWay, StringFormat=Completed: \{0\}}" />
            <TextBlock Text="  |  " />
            <TextBlock Text="{Binding TotalTasks, Mode=OneWay, StringFormat=Total: \{0\}}" />
            <TextBlock Text="  |  " />
            <CheckBox BorderBrush="{DynamicResource AccentColorBrush}" Content="{l:Static p:Resources.TaskManagerView_AutoScrollLogs}" IsChecked="{SLM:SettingBinding TaskManager_Logs_AutoScroll}">
                <CheckBox.ToolTip>
                    <ToolTip>
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Text="{l:Static p:Resources.TaskManagerView_AutoScrollLogs}" />
                            <TextBlock Text="{l:Static p:Resources.TaskManagerView_AutoScrollLogs_Tooltip}" />
                        </StackPanel>
                    </ToolTip>
                </CheckBox.ToolTip>
            </CheckBox>
            <CheckBox BorderBrush="{DynamicResource AccentColorBrush}" Margin="5,0,0,0" Content="{l:Static p:Resources.TaskManagerView_AutoClearCompletedTasks}" IsChecked="{SLM:SettingBinding TaskManager_AutoClear}">
                <CheckBox.ToolTip>
                    <ToolTip>
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Text="{l:Static p:Resources.TaskManagerView_AutoClearCompletedTasks}" />
                            <TextBlock Text="{l:Static p:Resources.TaskManagerView_AutoClearCompletedTasks_Tooltip}" />
                        </StackPanel>
                    </ToolTip>
                </CheckBox.ToolTip>
            </CheckBox>
            <CheckBox BorderBrush="{DynamicResource AccentColorBrush}" Margin="5,0,0,0" Content="{l:Static p:Resources.TaskManagerView_ContinueOnError}" IsChecked="{SLM:SettingBinding TaskManager_ContinueOnError}">
                <CheckBox.ToolTip>
                    <ToolTip>
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Text="{l:Static p:Resources.TaskManagerView_ContinueOnError}" />
                            <TextBlock Text="{l:Static p:Resources.TaskManagerView_ContinueOnError_Tooltip}" />
                        </StackPanel>
                    </ToolTip>
                </CheckBox.ToolTip>
            </CheckBox>
            <CheckBox BorderBrush="{DynamicResource AccentColorBrush}" Margin="5,0,0,0" Content="{l:Static p:Resources.TaskManagerView_SkipSteamRestartDialog}" IsChecked="{SLM:SettingBinding TaskManager_SteamRestartSkip}">
                <CheckBox.ToolTip>
                    <ToolTip>
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Text="{l:Static p:Resources.TaskManagerView_SkipSteamRestartDialog}" />
                            <TextBlock Text="{l:Static p:Resources.TaskManagerView_SkipSteamRestartDialog_Tooltip}" />
                            <TextBlock FontWeight="Bold" Text="{l:Static p:Resources.TaskManagerView_SkipSteamRestartDialog_Tooltip2}" />
                        </StackPanel>
                    </ToolTip>
                </CheckBox.ToolTip>
            </CheckBox>
        </WrapPanel>

        <!-- ListBox: Task Manager Logs -->
        <ListView BorderBrush="{DynamicResource AccentColorBrush}" x:Name="TaskManager_LogsView" Margin="0,0,0,10" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Height="220" VerticalAlignment="Bottom" ScrollViewer.ScrollChanged="TaskManager_LogsView_ScrollChanged" ScrollViewer.CanContentScroll="True" ScrollViewer.IsDeferredScrollingEnabled="True"  VirtualizingPanel.IsVirtualizing="True">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock TextWrapping="WrapWithOverflow" MaxHeight="16" Text="{Binding}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>